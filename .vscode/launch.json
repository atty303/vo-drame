    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to extension panel",
            // match to specified in .debug
            "port": 8000,
            "webRoot": "${workspaceFolder}/panel/dist",
